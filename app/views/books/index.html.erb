<h1>New Book</h1>

<%= form_with model:@book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<thead>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
  </tr>
</thead>

<% @books.each do |book| %>
<div>
  <p><%= image_tag 'no_image.jpg' %></p>
  <span><%= link_to book.title, book_path(book.id) %></span>
  <span><%= book.body %></span>
</div>
<% end %>
<h1>Books</h1>

<thead>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
  </tr>
</thead>

<% books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <span><%= link_to book.title, book_path(book.id) %></span>
  <span><%= book.body %></span>
</div>
<% end %>
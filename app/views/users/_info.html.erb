<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<h3>name</h3>
<%= user.name %>
<h3>introduction</h3>
<%= user.introduction %>

<% if user == current_user %>
  <p><%= link_to "User edit", edit_user_path(user) %></p>
<% end %>

<h1>New Book</h1>

<%= form_with model:@book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
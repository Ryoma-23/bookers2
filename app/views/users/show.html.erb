<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <%= render 'info', user: @user, book: @book%>
    <%= render 'books/post', books: @books, user: @user %>
  </div>
</div>

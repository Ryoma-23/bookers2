<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id="error_explanation">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <%end %>
      </div>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="inputName">Name</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :name, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="inputImage">Image</label>
          </div>
          <div class="field_with_errors">
            <%= f.file_field :profile_image, placeholder:"image", accept:"image/*" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="inputIntro">Introduction</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :introduction, autofocus: true, id:"inputIntro"%>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
